<p id="notice"><%= notice %></p>

<h1>Feeds</h1>
<br>
<div class='create-feed-btn'>
  <%= link_to 'New Feed', new_feed_path %>
</div>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.title %></td>
        <td><%= feed.url %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='pagination'>
  <%= link_to_if (@page != 0), "Last Page", posts_path(page: @page - 1) %> 
  | 
  <%= link_to_if (@posts.present?), "Next Page", posts_path(page: @page + 1) %> 
</div>

<br>
